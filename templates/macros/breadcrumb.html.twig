{% macro breadcrumb(link, title) %}

  <a class="breadcrumb--link" href="/{{ link }}/" title="{{ title }}" class="header-subpage--title-link">{{ title }}</a> /

{% endmacro %}

{% macro breadcrumbs(breadcrumbs) %}
  
  <div class="breadcrumb">
  <a class="breadcrumb--home" href="/">{% include '/icons/home.svg' %}</a><span class="breadcrumb--divider">/</span>
  {% for breadcrumb in breadcrumbs %}
    <a class="breadcrumb--link" href="/{{ breadcrumb.link }}/" title="{{ breadcrumb.title }}" class="header-subpage--title-link">
      {{ breadcrumb.title }}
    </a><span class="breadcrumb--divider">/</span>
  {% endfor %}
  </div>

{% endmacro %}